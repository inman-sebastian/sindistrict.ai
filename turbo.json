{
    "$schema": "https://turborepo.com/schema.json",
    "concurrency": "20",
    "tasks": {
        "dev": {
            "persistent": true,
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"],
            "env": [
                "NEXT_PUBLIC_SINDISTRICT_WEB_URL",
                "NEXT_PUBLIC_SINDISTRICT_APP_URL",
                "NEXT_PUBLIC_SUPABASE_URL",
                "NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY",
                "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
                "CLERK_SECRET_KEY"
            ]
        },
        "start": {
            "persistent": true,
            "cache": true
        }
    }
}