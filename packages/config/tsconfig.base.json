{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ]
    }
}