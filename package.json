{
    "name": "sindistrict-ai",
    "type": "module",
    "packageManager": "bun@1.3.5",
    "workspaces": [
        "apps/*",
        "packages/*",
        "services/*"
    ],
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "clean:bun": "find . -type f -name 'bun.lock' -exec rm -rf {} +",
        "clean:dist": "find . -type d -name 'dist' -exec rm -rf {} +",
        "clean:next": "find . -type d -name '.next' -exec rm -rf {} +",
        "clean:turbo": "find . -type d -name '.turbo' -exec rm -rf {} +",
        "clean:node_modules": "find . -type d -name 'node_modules' -exec rm -rf {} +",
        "clean": "bun run clean:bun && bun run clean:dist && bun run clean:next && bun run clean:node_modules"
    },
    "devDependencies": {
        "@types/node": "^25.0.5",
        "@yuheiy/postcss-custom-functions": "^0.1.1",
        "autoprefixer": "^10.4.23",
        "postcss": "^8.5.6",
        "postcss-calc": "^10.1.1",
        "postcss-cli": "^11.0.1",
        "postcss-combine-duplicated-selectors": "^10.0.3",
        "postcss-conditionals": "^2.1.0",
        "postcss-custom-media": "^11.0.6",
        "postcss-custom-selectors": "^8.0.5",
        "postcss-discard-comments": "^7.0.5",
        "postcss-each": "^1.1.0",
        "postcss-for": "^2.1.1",
        "postcss-import": "^16.1.1",
        "postcss-merge-at-rules": "^1.2.0",
        "postcss-nested": "^7.0.2",
        "postcss-sorting": "^9.1.0",
        "stylelint": "^16.26.1",
        "tsup": "^8.5.1",
        "turbo": "^2.7.3",
        "typescript": "^5.9.3"
    }
}